
<div class="form-signin">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<h3>Please Login Here</h3>
  <div class="field inner-addon left-addon">
       <i class="glyphicon glyphicon-user"></i>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", size: "35x8", class: "form-control input-lg input-block" %><br>
  </div>

  <div class="field inner-addon left-addon">
            <i class="glyphicon glyphicon-lock"></i>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", size: "35x10", class: "form-control input-lg" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions pager inner-addon left-addon">
    <%= f.submit "Log in", class: "btn btn-primary my-btn btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


