<%= form_for(@loan) do |f| %>
  <% if @loan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
      <% @loan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :bankname %><br>
    <%= f.select:bankname,Bank.all.collect { |p| ["#{p.name},#{p.branch}"] }, {
:include_blank => 'None' } %>
  </div>
  <div class="field">
    <%= f.label :loanname %><br>
    <%= f.text_field :loanname %>
  </div>
  <div class="field">
    <%= f.label :loan_type %><br>
    <%= f.text_field :loan_type %>
  </div>
  <div class="field">
    <%= f.label :interest_rate %><br>
    <%= f.number_field :interest_rate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
